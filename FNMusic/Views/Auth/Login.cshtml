@model FNMusic.Models.Auth.Login
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}

<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
    <div class="container aside-xl">
        <a class="navbar-brand block" asp-controller="Home" asp-action="Index">
            <span class="h1 font-bold">FNMusic</span>
        </a>
        <section class="m-b-lg">
            <header class="wrapper text-center"> <strong>Sign in to get in touch</strong> </header>
            @using (Html.BeginForm("signin", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <hr />
                <div class="form-group">
                    @Html.TextBoxFor(x => x.email, new { type = "email", placeholder = "Email", @class = "form-control rounded input-lg text-center no-border" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.password, new { type = "password", placeholder = "Password", @class = "form-control rounded input-lg text-center no-border" })
                </div>
                <button type="submit" class="btn btn-lg btn-warning lt b-white b-2x btn-block btn-rounded">
                    <i class="icon-arrow-right pull-right"></i>
                    <span class="m-r-n-lg">Sign in</span>
                </button>
                <div class="text-center m-t m-b">
                    <a asp-controller="Auth" asp-action="ForgotPassword">
                        <small>Forgot password?</small>
                    </a>
                </div>
                <div class="line line-dashed"></div>
                <p class="text-muted text-center">
                    <small>Do not have an account?</small>
                </p>
                <a asp-controller="Auth" asp-action="Register" class="btn btn-lg btn-info btn-block rounded">Create an account</a>
            }
        </section>
    </div>
</section>

