@model FNMusic.Models.Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="m-t-lg wrapper-md animated fadeInDown">
    <div class="container aside-xl bg-white" style="box-shadow:0px 10px 10px; border-radius:5px;">
        <header class="wrapper text-center">
            <h2>Sign Up</h2>
            
        </header>
        <section class="form-horizontal" style="padding:0px 30px 0px 30px;">
            @*<a href="#" class="btn btn-info btn-block">
                <i class="fa fa-fw fa-twitter"></i>
                <span>Twitter</span>
            </a>
            <a href="#" class="btn btn-primary btn-block">
                <i class="fa fa-fw fa-facebook"></i>
                <span>Facebook</span>
            </a>
            <h5 class="text-center">OR</h5>*@
            <h5 class="text-center">Fill in the necessary information</h5>
            @using (Html.BeginForm("register", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger small" })
                <hr />
                <div class="form-group">
                    @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger small" })
                    @Html.TextBoxFor(x => x.Username, new { placeholder = "Username", @class = "form-control text-center", style = "" })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger small" })
                    @Html.TextBoxFor(x => x.Email, new { type = "email", placeholder = "Email Address", @class = "form-control text-center", style = "" })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger small" })
                    @Html.PasswordFor(x => x.Password, new { placeholder = "Password", @class = "form-control text-center", style = "" })
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger small" })
                    @Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control text-center", style = "" })
                </div>
                <div class="checkbox i-checks m-b" style="padding-bottom:10px;">
                    <label class="m-l">
                        <input id="tac" type="checkbox" style="text-align:center;" checked="" />
                        <i></i>
                        <small>
                            I agree to the
                            <a href="#">terms and conditions</a>
                        </small>
                    </label>
                </div>
                <button type="submit" class="btn btn-warning btn-block">
                    <span class="text-center">Sign up</span>
                </button>
                <div class="line line-dashed"></div>
                <p class="text-muted text-center">
                    <small>
                        Already have an account?
                        <a asp-controller="Auth" asp-action="Login">click here </a>
                    </small>
                </p>
            }
        </section>
    </div>
</section>


